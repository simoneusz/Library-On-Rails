<div class="container mt-5">
  <%= form_for @book, html: { multipart: true, class: "needs-validation" }, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, "Book name ", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter book name", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :author_name, "Author", class: "form-label" %>
      <%= f.text_field :author_name, class: "form-control", placeholder: "Enter author name", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description", class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 5, placeholder: "Enter book description", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :image, "Image", class: "form-label" %>
      <%= f.file_field :image, class: "form-control-file" %>
      <% if @book.image.present? %>
        <div class="mt-3">
          <strong>Current image:</strong>
          <img src="<%= @book.image.url %>" alt="Preview" class="img-thumbnail mt-2" style="max-width: 200px;">
        </div>
      <% end %>
    </div>

    <div class="form-group mt-3">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>