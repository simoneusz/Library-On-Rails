<%= form_with(model: [book, Comment.new], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :content, "Your Comment" %>
    <%= form.text_area :content, class: "form-control", rows: 3 %>
  </div>

  <div class="actions">
    <%= form.submit "Add Comment", class: "btn btn-primary" %>
  </div>
<% end %>